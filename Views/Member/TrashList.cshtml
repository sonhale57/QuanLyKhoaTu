@{
    ViewData["Title"] = "Danh sách bị xóa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between mb-2 mt-3">
    <input type="text" id="searchInput" class="form-control w-25" placeholder="Tìm kiếm thành viên...">
    <div class="input-group w-25 text-end justify-content-end">
    </div>
</div>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-responsive">
        <thead class="bg-success text-white">
            <tr>
                <th class="text-center">STT</th>
                <th class="text-center">Mã thành viên</th>
                <th>Họ và tên</th>
                <th>Pháp danh</th>
                <th class="text-center">Năm sinh</th>
                <th class="text-center">Số điện thoại</th>
                <th class="text-center">Số CCCD</th>
                <th class="text-center">Đã tham gia</th>
                <th class="text-center">Ngày tạo</th>
                <th class="text-end me-3">Thao tác</th>
            </tr>
        </thead>
        <tbody id="thanhvienTable">
            <tr>
                <td colspan="10" class="text-center">Đang "tải dữ liệu" vui lòng đợi!</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="d-flex justify-content-between mb-3">
    <div class="input-group mb-3 w-25">
        <span class="input-group-text" id="basic-addon1">
            <i class="ti ti-list me-2"></i> rows per page
        </span>
        <select id="limitSelect" class="form-select form-select-sm w-25" aria-label=".form-select-sm example">
            <option value="50">50 thành viên</option>
            <option value="100">100 thành viên</option>
            <option value="150">150 thành viên</option>
        </select>
    </div>
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <button class="page-link" id="prevPage">
                    <i class="ti ti-chevrons-left"></i> Trước
                </button>
            </li>
            <li class="page-item disabled"><span class="page-link" id="currentPage">1</span></li>
            <li class="page-item">
                <button class="page-link" id="nextPage">
                    Sau <i class="ti ti-chevrons-right"></i>
                </button>
            </li>
        </ul>
    </nav>
</div>
@section Scripts {
    <script src="~/js/TrashRemoved.js"></script>
}

