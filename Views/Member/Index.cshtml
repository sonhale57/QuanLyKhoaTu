
@{
    ViewData["Title"] = "Quản lý thành viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-between mb-2 mt-3">
    <input type="text" id="searchInput" class="form-control w-25" placeholder="Tìm kiếm thành viên...">

    <div class="input-group w-25 text-end justify-content-end">
        <a href="/thanh-vien-da-xoa" class="btn btn-outline-danger rounded-1 me-1"><i class="ti ti-trash"></i> Danh sách đã xóa</a>
        <a class="btn btn-outline-secondary rounded-1 me-1" data-bs-toggle="modal" data-bs-target="#importModal"><i class="ti ti-file-import"></i> Import</a>
        <a id="btnAdd" class="btn btn-success rounded-1"><i class="ti ti-plus"></i> Thêm mới</a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-responsive">
        <thead class="bg-success text-white">
            <tr>
                <th class="text-center">STT</th>
                <th class="text-center">Mã thành viên</th>
                <th>Họ và tên</th>
                <th>Pháp danh</th>
                <th class="text-center">Giới tính</th>
                <th class="text-center">Năm sinh</th>
                <th class="text-center">Số điện thoại</th>
                <th class="text-center">Số CCCD</th>
                <th class="text-center">Đã tham gia</th>
                <th class="text-center">Ngày tạo</th>
                <th class="text-end me-3">Thao tác</th>
            </tr>
        </thead>
        <tbody id="thanhvienTable">
            <tr>
                <td colspan="11" class="text-center">Đang "tải dữ liệu" vui lòng đợi!</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="d-flex justify-content-between mb-3">
    <div class="input-group mb-3 w-25">
        <span class="input-group-text" id="basic-addon1">
            <i class="ti ti-list me-2"></i> rows per page
        </span>
        <select id="limitSelect" class="form-select form-select-sm w-25" aria-label=".form-select-sm example">
            <option value="50">50 thành viên</option>
            <option value="100">100 thành viên</option>
            <option value="150">150 thành viên</option>
        </select>
    </div>
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <button class="page-link" id="prevPage">
                    <i class="ti ti-chevrons-left"></i> Trước
                </button>
            </li>
            <li class="page-item disabled"><span class="page-link" id="currentPage">1</span></li>
            <li class="page-item">
                <button class="page-link" id="nextPage">
                    Sau <i class="ti ti-chevrons-right"></i>
                </button>
            </li>
        </ul>
    </nav>
</div>

<div class="modal fade" id="importModal" tabindex="-1">
    <div class="modal-lg modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Import thành viên</h5>
                <a href="#" class="btn btn-sm btn-light" data-bs-dismiss="modal">
                    <i class="ti ti-x"></i>
                </a>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label>File danh sách thành viên</label>
                    <input type="file" id="excelFile" class="form-control">
                </div>
                <button class="btn btn-success" id="btnImport"><i class="ti ti-upload"></i> Import Excel</button>
            </div>
        </div>
    </div>
</div>
                    
<!-- Modal User -->
<div class="modal fade" id="thanhvienModal" tabindex="-1">
    <div class="modal-lg modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thông tin Thành viên</h5>
                <a href="#" class="btn btn-sm btn-light" data-bs-dismiss="modal">
                    <i class="ti ti-x"></i>
                </a>
            </div>
            <form enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="hidden" id="memberId">
                    <div class="mb-3">
                        <label>Mã thành viên</label>
                        <input type="text" id="code" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label>Họ và tên</label>
                        <input type="text" id="name" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label>Pháp danh</label>
                        <input type="text" id="ortherName" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label>Giới tính</label>
                        <select id="gender" class="form-control">
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>Ngày tháng năm sinh</label>
                        <input type="date" id="birthDay" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label>Số điện thoại</label>
                        <input type="text" id="phone" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label>Số điện thoại người thân</label>
                        <input type="text" id="ortherPhone" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label>Mặt trước CCCD</label>
                        <input type="file" id="imageCCCD" class="form-control">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" id="btnSave">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/ThanhVien.js"></script>
}

